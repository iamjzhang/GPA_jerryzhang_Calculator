<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8B2"

    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F8B2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="#92D2EF"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:text="GPA Calculator"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="40sp" />


            <EditText
                android:id="@+id/grade1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:hint="Enter grade for course 1"
                android:inputType="number" />

            <EditText
                android:id="@+id/grade2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:hint="Enter grade for course 2"
                android:inputType="number" />

            <EditText
                android:id="@+id/grade3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:hint="Enter grade for course 3"
                android:inputType="number" />

            <EditText
                android:id="@+id/grade4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:hint="Enter grade for course 4"
                android:inputType="number" />

            <EditText
                android:id="@+id/grade5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:hint="Enter grade for course 5"
                android:inputType="number" />

            <TextView
                android:id="@+id/finalGPA"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#81DCBC"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:text="Your GPA is: "
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:background="#F6F8B2" />

            <Button
                android:id="@+id/calculate"
                android:layout_width="247dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:backgroundTint="#99DCFA"
                android:fontFamily="sans-serif-black"
                android:text="Calculate GPA"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>