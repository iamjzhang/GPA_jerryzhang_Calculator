<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81DCBC"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="center"
        android:text="GPA Calculator" />


    <EditText
        android:id="@+id/grade1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter grade for course 1"
        android:gravity="center"
        android:background="#FFFFFF"
        android:inputType="number" />

    <EditText
        android:id="@+id/grade2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter grade for course 2"
        android:gravity="center"
        android:background="#FFFFFF"
        android:inputType="number" />

    <EditText
        android:id="@+id/grade3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter grade for course 3"
        android:gravity="center"
        android:background="#FFFFFF"
        android:inputType="number" />

    <EditText
        android:id="@+id/grade4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter grade for course 4"
        android:gravity="center"
        android:background="#FFFFFF"
        android:inputType="number" />

    <EditText
        android:id="@+id/grade5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter grade for course 5"
        android:gravity="center"
        android:background="#FFFFFF"
        android:inputType="number" />

    <TextView
        android:id="@+id/finalGPA"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="Your GPA is: " />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        />

    <Button
        android:id="@+id/calculate"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:background="@drawable/circle"
        android:text="Calculate GPA" />

</LinearLayout>